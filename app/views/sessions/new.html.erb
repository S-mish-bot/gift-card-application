

<div class="container card col-sm-4 my-4 p-4">
    <h2 class="d-flex justify-content-center align-items-center">Sign In</h2>
    <%= form_with url: sign_in_path do |form|%>
        <div class="mb-3">
            <%= form.label :username%>
            <%= form.text_field :username, class: "form-control", placeholder: "username"%>
        </div>

        <div class="mb-3">
            <%= form.label :password%>
            <%= form.password_field :password, class: "form-control", placeholder: "password"%>
        </div>

        <div class=" d-flex justify-content-center align-items-center">
            <%=form.submit "Login", class: "btn btn-primary"%>
        </div>
    <%end%>
</div>