
<div class="container card  col-sm-4 my-4 p-4 ">
    <h1 class=" d-flex justify-content-center align-items-center ">Register</h1>
    <%=form_with model: @user, url: register_path do |form| %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
                <% @user.errors.full_messages.each do |message|%>
                    <div><%= message %></div>
                <%end%>

            </div>
        <%end%>

        <div class="mb-3">
            <%=form.label :username%>
            <%= form.text_field :username, class: "form-control", placeholder: "Username"%>
        </div>
        <div class="mb-3">
            <%=form.label :password%>
            <%= form.password_field :password, class: "form-control", placeholder: "Password"%>
        </div>
        <div class="mb-3">
            <%=form.label :confirm_Password%>
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"%>
        </div>
        <div class="mb-3" >
            <%=form.label :email%>
            <%= form.text_field :email, class: "form-control", placeholder: "abc@example.com"%>
        </div>
        <div class="mb-3  d-flex justify-content-center align-items-center">
            <%=form.submit "Register", class: "btn btn-success"%>
        </div>
    <%end%>
</div>