<div class="container">
    <h2 class="d-flex justify-content-center align-items-center m-4">Order History</h2>
    <table class="table table-striped table-bordered table-hover  ">
        <thead class="thead-dark">
            <tr>
                <th>Order Id</th>
                <th>Recipient Name</th>
                <th>Ordered Date</th>
                <th>Gift card Value</th>
                <th>Commission (10%)</th>
                <th>Delivery Status</th>
            </tr>
        </thead>
        <tbody>
            <% Giftcoupon.all.each do |giftcoupon|%>
                <% if Current.user == giftcoupon.user %>
                    <tr>
                        <td><%=giftcoupon.id%></td>
                        <td><%=giftcoupon.first_name + " " + giftcoupon.last_name%></td>
                        <td><%=giftcoupon.order_date%></td>
                        <td><%=giftcoupon.gift_card_value%></td>
                        <td><%=giftcoupon.total_amount%></td>
                        <td><b><%=giftcoupon.status%></b></td>
                    </tr>
                <%end%>
            <%end%>
        </tbody>

    </table>

</div>